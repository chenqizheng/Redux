<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="valueï¼š"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.38"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/value"
            app:layout_constraintRight_toLeftOf="@+id/value"
            android:id="@+id/add"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/value"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/value"
            android:id="@+id/sub"/>

</android.support.constraint.ConstraintLayout>